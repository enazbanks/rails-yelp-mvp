<%# DISPLAY THE FORM %>
<%# [@restaurant, @review] will create: '/restaurants/:restaurant_id/reviews' %>
<h1>Create Review for restaurant: <%= @restaurant.name %></h1>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit %>
<% end %>
